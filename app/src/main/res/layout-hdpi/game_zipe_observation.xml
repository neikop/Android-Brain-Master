<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b4060"
    tools:context="com.example.windzlord.brainmaster.screens.types.FragmentObservation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">

            <at.markushi.ui.CircleButton
                android:id="@+id/button_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_left_white"
                app:cb_color="@color/cardview_dark_background" />

            <at.markushi.ui.CircleButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_type_observation"
                app:cb_color="@color/colorOrangeLight" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="OBSERVE GAMES"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.example.windzlord.brainmaster.layout.GameCoverLayout
                    android:id="@+id/game_obser_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:name="@string/game_observer_one"
                    app:src="@drawable/ic_cover_game_obser_1"
                    app:unlocked="true" />

                <com.example.windzlord.brainmaster.layout.GameCoverLayout
                    android:id="@+id/game_obser_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:name="@string/game_observer_two"
                    app:src="@drawable/ic_cover_game_obser_2"
                    app:unlocked="true" />

                <com.example.windzlord.brainmaster.layout.GameCoverLayout
                    android:id="@+id/game_obser_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    app:name="@string/game_observer_three"
                    app:src="@drawable/ic_cover_game_obser_3"

                    app:unlocked="true" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
